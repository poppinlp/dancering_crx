{
	"manifest_version": 2,

	"name": "Dusic",
    "short_name": "rqdev",
	"description": "chrome extension for download music from dancering.cn",
	"version": "0.1.0",

    "browser_action": {
        "default_icon": {
            "16": "assets/ext/logo128.png",
            "48": "assets/ext/logo128.png",
            "128": "assets/ext/logo128.png"
        }
    },
	"icons": {
		"16": "img/logo.png",
		"48": "img/logo.png",
		"128": "img/logo.png"
	},
    "offline_enabled": true,
    "background": {
        "scripts": [
            "js/base64.js",
            "js/bg.js"
        ]
    },
	
    "author": "PoppinL",
    "omnibox": {
        "keyword": "dusic"
    },

	"permissions": [
        "downloads",
        "contextMenus",
		"http://www.dancering.cn/"
	]
}
